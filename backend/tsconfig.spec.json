{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2023",
    "types": ["jest", "node"],
    "resolvePackageJsonExports": false
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
